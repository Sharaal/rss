<div class="py-5">
  <div class="container">
    <table class="table table-striped">
      <tbody>
        {{#each feeds}}
          <tr>
            <td class="w-100">{{title}}</td>
            <td>
              <form action="unsubscripe" method="post">
                <input type="hidden" name="redirect" value="/settings">
                <input type="hidden" name="feed_id" value="{{id}}">
                <button class="btn btn-danger" type="submit">Unsubscripe</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
