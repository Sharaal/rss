<div class="py-5">
  <div class="container">
    <h3>Subscriptions</h3>
    <table class="table table-striped">
      <thead>
        <th>Title</th>
        <th>URL</th>
        <th>Fetched at</th>
        <th></th>
      </thead>
      <tbody>
        {{#each feeds}}
          <tr>
            <td>{{title}}</td>
            <td><a href="{{url}}">{{url}}</a></td>
            <td>{{formatRelative fetched_at}}</td>
            <td class="text-right">
              <form action="unsubscripe" method="post">
                <input type="hidden" name="redirect" value="/settings">
                <input type="hidden" name="feed_id" value="{{id}}">
                <button class="btn btn-danger" type="submit">Unsubscripe</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <h3>OPML</h3>
    <a href="/settings/opml">Show OPML file</a>
  </div>
</div>
